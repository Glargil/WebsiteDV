@page
@model LoginModel
@{
	ViewData["Title"] = "Login";
	ViewData["ShowNavbar"] = false;
}
<head>
	<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<div class="login-wrapper">
	<div class="login-container">
		<h2 class="login-title">Login for at fortsætte</h2>
		<form method="post" class="login-form">
			<div class="form-group">
				<label asp-for="Email" class="form-label">EMAIL</label>
				<input asp-for="Email" class="form-input" />
			</div>
			<div class="form-group">
				<label asp-for="Password" class="form-label">PASSWORD</label>
				<input asp-for="Password" type="password" class="form-input" />
			</div>
			<button type="submit" class="login-button">Login</button>
			<div style="color:red">@Model.ErrorMessage</div>
		</form>
	</div>
</div>
