@page
@model WebsiteDV.Pages.AnimalsModel

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <title>Animals</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>

<body>
    @foreach (var animal in Model.Animals)
    {
        <div class="container">
            <div class="card">
                <div class="card__bg">
                    <div class="card-body">
                        <h5 class="card-title">Navn: @animal.Name</h5>
                        <p class="card-text">
                        <p class="card-text">Vægt: @animal.Weight<br />
                        </p>
                    </div>
                </div>
            </div>

        </div>
    }
</body>
</html>