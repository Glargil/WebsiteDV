@page
@model WebsiteDV.Pages.Userpages.AnimalsModel
@using System.Diagnostics

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <title>Animals</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>

<body>
    <p>ANIMALSANIMALSANIMALS</p>
    
    
    @if (Model.Animals == null || !Model.Animals.Any())
    {
        <p>No animals found.</p>
    }
    else
    foreach (var animal in Model.Animals)
    {
        <div class="container">
            <div class="card">
                <div class="card__bg">
                    <div class="card-body">
                        <h5 class="card-title">Navn: @animal.Name</h5>
                        <p class="card-text">

                            <p class="card-text">
                                @animal.Description<br />
                            </p>

                            <p class="card-text">
                                Race: @animal.Race<br />
                            </p>

                            <p class="card-text">
                                Køn: 
                                @if (animal.Gender == 'M')
                                {
                                        <img src="media/M.png" alt="Male" style="width:32px;height:32px;" />
                                }
                                else if (animal.Gender == 'F')
                                {   
                                        <img src="media/F.png" alt="Female" style="width:32px;height:32px;" />    
                                }
                                <br />
                            </p>

                            <p class="card-text">
                                Vægt: @animal.Weight<br />
                            </p>

                        <p class="card-text">
                            Vægt: @animal.Weight<br />
                        </p>
                    </div>
                </div>
            </div>

        </div>
    }
</body>
</html>