@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@model WebsiteDV.Pages.Administration.CreateUserModel
@{
    ViewData["Title"] = "Create User";
}

<h2>Create New User</h2>
<form method="post">
    <div>
        <label>Name:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="Email" type="email" />
    </div>
    <div>
        <label>Phone Number:</label>
        <input asp-for="PhoneNumber" />
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="Password" type="password" />
    </div>
    <div>
        <label>User Type:</label>
        <select asp-for="UserType">
            <option value="1">Employee</option>
            <option value="2">Admin</option>
        </select>
    </div>
    <button type="submit" onclick="return confirm('Er du sikker på denne bruger skal oprettes?');">Create User</button>
    <div style="color:red">@Model.ErrorMessage</div>
    <div style="color:green">@Model.SuccessMessage</div>
</form>
<a href="/Administration/UserAdministration">Back to User List</a>

<div asp-validation-summary="All"></div>
