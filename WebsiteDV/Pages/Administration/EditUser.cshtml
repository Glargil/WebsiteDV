@page "{userId:int}"
@model WebsiteDV.Pages.Administration.EditUserModel
@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>
<form method="post">
    <input type="hidden" asp-for="UserId" />
    <div>
        <label>Name:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="Email" type="email" />
    </div>
    <div>
        <label>Phone Number:</label>
        <input asp-for="PhoneNumber" />
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="Password" type="password" />
    </div>
    <div>
        <label>User Type:</label>
        <select asp-for="UserType">
            <option value="1" selected="@Model.UserType == 1">Employee</option>
            <option value="2" selected="@Model.UserType == 2">Admin</option>
        </select>
    </div>
    <button type="submit">Save Changes</button>
    <div style="color:red">@Model.ErrorMessage</div>
    <div style="color:green">@Model.SuccessMessage</div>
</form>
